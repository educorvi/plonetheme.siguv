<div id="siguv-navigation" class="${view/get_navigation_class}">

  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <nav class="navbar navbar-expand-lg pt-2 pb-0 navbar-light">

          <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto" tal:define="items view/return_navtree">

            <tal:repeat tal:repeat="item items">
              <li class="nav-item"
                  tal:define="sub python: view.return_navtree(item['path'])"
                  tal:attributes="class python: view.get_item_class(item, sub)">

                <a class="nav-link"
                   data-toggle=""
                   href="${item/url}"
                   tal:attributes="class python: 'nav-link dropdown-toggle' if sub else 'nav-link'; data-toggle python: 'dropdown' if sub else '';"
                   id="${item/id}">${item/title}</a>

                <div class="dropdown-menu" tal:condition="sub">
                  <tal:repeat tal:repeat="subitem sub">
                    <a class="dropdown-item" href="${subitem/url}">${subitem/title}</a>
                  </tal:repeat>
                </div>

              </li>
            </tal:repeat>

            </ul>
          </div>

        </nav>

      </div>
    </div>
  </div>

  <div class="navigation-menu">
    <div class="navigation-handle"></div>
  </div>

</div>
